<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.nwafu.blog.dao.TypeMapper">
    <resultMap id="typeResultMap" type="cn.edu.nwafu.blog.entity.Type">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="DATE"/>
        <result property="updateTime" column="update_time" jdbcType="DATE"/>
        <result property="isDeletedFlag" column="is_deleted_flag" jdbcType="BIT"/>
    </resultMap>
    <insert id="saveType" parameterType="type"></insert>
    <update id="updateTypeById" parameterType="type"></update>
    <delete id="deleteTypeById"></delete>
    <select id="selectTypePageList" resultType="type">
        select
            id,
            name,
            createTime,
            updateTime
        from t_type
        where is_deleted_flag = 0
        <if test="name!=null and name!=''">
            and name like CONCAT('%',#{name},'%')
        </if>
    </select>

    <select id="selectTypeById" resultType="type"></select>
    <select id="selectTypeByName" resultType="type">
        select
        id,
        name,
        createTime,
        updateTime
        from t_type
        where is_deleted_flag = 0
        and name=#{name}
    </select>
</mapper>